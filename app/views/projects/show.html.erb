<article class="details-project">
    <h1 class="project-details-name"> <%= @project.name %>  </h1>

    <div class="glyphicon glyphicon-calendar" id="project-date">
        <%= @project.created_at.strftime("%b %d, %y") %>
    </div>
    
    <div class="project-description">
        <%= @project.description %>
    </div>
    
    <%= link_to "Edit Project" , edit_project_path(@project), class: "btn btn-primary btn-lg btn-space" %>
    <%= link_to "Delete Project" , project_path(@project) , method: :delete , data: {confirm: "Are you sure?"} , class: "btn btn-danger btn-lg btn-space" %>

</article>

